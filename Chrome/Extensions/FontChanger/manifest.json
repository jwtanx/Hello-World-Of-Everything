{
  "manifest_version": 2,
  "name": "Font Changer",
  "version": "1.0",
  "description": "A Chrome extension to toggle the font family",
  "browser_action": {
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "commands": {
    "change-font": {
      "suggested_key": {
        "default": "Ctrl+Shift+F",
        "mac": "Command+Shift+F"
      },
      "description": "Change font"
    }
  }
}
